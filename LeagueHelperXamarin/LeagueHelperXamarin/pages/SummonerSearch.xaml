<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LeagueHelperXamarin.pages.SummonerSearch">
    <ContentPage.Content>
        <StackLayout
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand">
            <Label Text="Summoner overview!"/>
            <Entry x:Name="SearchInput" Placeholder="Search Summoner..."/>
            <Button Text="Search" Clicked="SearchSummonerClick"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>